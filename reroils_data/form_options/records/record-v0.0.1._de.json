[
    {
        "type": "fieldset",
        "items": [{
            "type": "actions",
            "htmlClass": "rero21-submit pull-right",
            "items": [{
                "type": "submit",
                "style": "btn-success",
                "title": "Speichern"
            }]
        }]
    },{
        "type": "fieldset",
        "title": "Identifikatoren",
        "items": [
            {
                "type": "section",
                "htmlClass": "row",
                "items": [
                    {
                        "type": "section",
                        "htmlClass": "col-xs-4",
                        "items": [{
                            "key": "bibid",
                            "title": "bibid",
                            "description": "Permanenter und automatisch generierter Identifikator.",
                            "readonly": true
                        }]
                    },
                    {
                        "type": "section",
                        "htmlClass": "col-xs-4",
                        "items": [{
                                "key": "identifiers.isbn",
                                "title": "ISBN"
                        }]
                    },{
                        "type": "section",
                        "htmlClass": "col-xs-4",
                        "items": [{
                            "type": "actions",
                            "items": [{
                                "type": "button",
                                "style": "btn-info rero21-import",
                                "title": "Importieren",
                                "onClick": "importEanFromBnf()"
                            }]
                        }]
                    }
                ]
            }
        ]
    },{
        "type": "fieldset",
        "title": "Titel",
        "items": [
            {
                "key": "title",
                "notitle": true,
                "htmlClass": "rero21-required"
            }
        ]
    },{
        "type": "fieldset",
        "title": "Autor(en)",
        "items": [{
            "key": "authors",
            "notitle": true,
            "description": "",
            "add": "neuer Autor",
            "style": {
                "add": "btn-link"
            },
            "type": "array",
            "startEmpty": true,
            "items": [
                {
                    "key": "authors[].type",
                    "type": "radiobuttons",
                    "notitle": true,
                    "titleMap": [
                        {
                            "value": "person",
                            "name": "Person"
                        },
                        {
                            "value": "organisation",
                            "name": "Organisation"
                        }
                    ],
                    "style": {
                        "selected": "btn-success",
                        "unselected": "btn-default"
                    }
                },{
                    "key": "authors[].name"
                },{
                    "key": "authors[].date",
                    "condition": "model.authors[arrayIndex].type == 'person'"
                },{
                    "key": "authors[].qualifier",
                    "condition": "model.authors[arrayIndex].type == 'person'"
                }
            ]
        }]
    },{
        "type": "fieldset",
        "title": "Sprache(n) der Ressource",
        "items": [{
            "key": "languages",
            "notitle": false,
            "title": "Sprache Name",
            "add": "neue Sprache",
            "style": {
                "add": "btn-link"
            },
            "startEmpty": true,
            "type": "array",
            "validationMessage": {
                "402": "<span class=\"text-danger\">Language value should be unique!</span>"
            },
            "items": [{
                "key": "languages[].language",
                "notitle": true,
                "description": "",
                "default": "fre",
                "htmlClass": "rero21-required",
                "titleMap": [
                    { "value": "ara", "name": "Arabisch" },
                    { "value": "chi", "name": "Chinesisch" },
                    { "value": "eng", "name": "Englisch" },
                    { "value": "fre", "name": "Französisch" },
                    { "value": "ger", "name": "Deutsch" },
                    { "value": "heb", "name": "Hebräisch" },
                    { "value": "ita", "name": "Italienisch" },
                    { "value": "jpn", "name": "Japanisch" },
                    { "value": "lat", "name": "Lateinisch" },
                    { "value": "por", "name": "Portugiesisch" },
                    { "value": "rus", "name": "Russisch" },
                    { "value": "spa", "name": "Spanisch" }
                ]
            }]
        }]
    },{
        "type": "fieldset",
        "title": "Erscheinungsdatum",
        "items": [{
            "type": "section",
            "htmlClass": "row",
            "items": [
                {
                    "type": "section",
                    "htmlClass": "col-xs-6",
                    "items": [
                        "publicationYear"
                    ]
                },
                {
                    "type": "section",
                    "htmlClass": "col-xs-6",
                    "items": [{
                        "key": "freeFormedPublicationDate",
                        "condition": "model.publicationYear"
                    }]
                }
            ]
        }]
    },{
        "type": "fieldset",
        "items": [{
            "type": "actions",
            "htmlClass": "rero21-submit pull-right",
            "items": [{
                    "type": "submit",
                    "style": "btn-success",
                    "title": "Speichern"
            }]
        }]
    }
]
