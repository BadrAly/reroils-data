[
    {
        "type": "fieldset",
        "items": [{
            "type": "actions",
            "htmlClass": "rero21-submit pull-right",
            "items": [{
                "type": "submit",
                "style": "btn-success",
                "title": "Soumettre"
            }]
        }]
    },{
        "type": "fieldset",
        "title": "Identifiants",
        "items": [
            {
                "type": "section",
                "htmlClass": "row",
                "items": [
                    {
                        "type": "section",
                        "htmlClass": "col-xs-4",
                        "items": [{
                            "key": "bibid",
                            "title": "bibid",
                            "description": "Identifiant pérenne, généré automatiquement.",
                            "readonly": true
                        }]
                    },
                    {
                        "type": "section",
                        "htmlClass": "col-xs-4",
                        "items": [{
                                "key": "identifiers.isbn",
                                "title": "ISBN"
                        }]
                    },{
                        "type": "section",
                        "htmlClass": "col-xs-4",
                        "items": [{
                            "type": "actions",
                            "items": [{
                                "type": "button",
                                "style": "btn-info rero21-import",
                                "title": "Importer",
                                "onClick": "importEanFromBnf()"
                            }]
                        }]
                    }
                ]
            }
        ]
    },{
        "type": "fieldset",
        "title": "Title",
        "items": [
            {
                "key": "title",
                "notitle": true,
                "htmlClass": "rero21-required"
            }
        ]
    },{
        "type": "fieldset",
        "title": "Auteur(s)",
        "items": [{
            "key": "authors",
            "notitle": true,
            "description": "",
            "add": "nouvel auteur",
            "style": {
                "add": "btn-link"
            },
            "type": "array",
            "startEmpty": true,
            "items": [
                {
                    "key": "authors[].type",
                    "type": "radiobuttons",
                    "notitle": true,
                    "titleMap": [
                        {
                            "value": "person",
                            "name": "Personne"
                        },
                        {
                            "value": "organisation",
                            "name": "Collectivité"
                        }
                    ],
                    "style": {
                        "selected": "btn-success",
                        "unselected": "btn-default"
                    }
                },{
                    "key": "authors[].name"
                },{
                    "key": "authors[].date",
                    "condition": "model.authors[arrayIndex].type == 'person'"
                },{
                    "key": "authors[].qualifier",
                    "condition": "model.authors[arrayIndex].type == 'person'"
                }
            ]
        }]
    },{
        "type": "fieldset",
        "title": "Langue(s) de la ressource",
        "items": [{
            "key": "languages",
            "notitle": false,
            "title": "Nom de la langue",
            "add": "nouvelle langue",
            "style": {
                "add": "btn-link"
            },
            "startEmpty": true,
            "type": "array",
            "validationMessage": {
                "402": "<span class=\"text-danger\">La langue doit être unique!</span>"
            },
            "items": [{
                "key": "languages[].language",
                "notitle": true,
                "description": "",
                "default": "fre",
                "htmlClass": "rero21-required",
                "titleMap": [
                    { "value": "ara", "name": "Arabe" },
                    { "value": "chi", "name": "Chinois" },
                    { "value": "eng", "name": "Anglais" },
                    { "value": "fre", "name": "Français" },
                    { "value": "ger", "name": "Allemand" },
                    { "value": "heb", "name": "Hébreux" },
                    { "value": "ita", "name": "Italien" },
                    { "value": "jpn", "name": "Japonais" },
                    { "value": "lat", "name": "Latin" },
                    { "value": "por", "name": "Portugais" },
                    { "value": "rus", "name": "Russe" },
                    { "value": "spa", "name": "Espagnol" }
                ]
            }]
        }]
    },{
        "type": "fieldset",
        "title": "Date de publication",
        "items": [{
            "type": "section",
            "htmlClass": "row",
            "items": [
                {
                    "type": "section",
                    "htmlClass": "col-xs-6",
                    "items": [
                        "publicationYear"
                    ]
                },
                {
                    "type": "section",
                    "htmlClass": "col-xs-6",
                    "items": [{
                        "key": "freeFormedPublicationDate",
                        "condition": "model.publicationYear"
                    }]
                }
            ]
        }]
    },{
        "type": "fieldset",
        "items": [{
            "type": "actions",
            "htmlClass": "rero21-submit pull-right",
            "items": [{
                    "type": "submit",
                    "style": "btn-success",
                    "title": "Sauver"
            }]
        }]
    }
]
