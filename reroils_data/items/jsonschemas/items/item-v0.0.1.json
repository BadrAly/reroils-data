{
    "$schema": "http://json-schema.org/draft-04/schema#",
    "type": "object",
    "title": "Item",
    "description": "JSON schema for an item.",
    "additionalProperties": false,
    "required": ["$schema", "pid", "barcode", "callNumber", "location", "item_type"],
    "properties": {
        "$schema": {
            "title": "Schema",
            "description": "Schema to validate item records against.",
            "type": "string",
            "minLength": 9
        },
        "pid": {
            "title": "Item ID",
            "type": "string",
            "minLength": 1
        },
        "barcode": {
            "title": "Barcode",
            "description": "Barecode of the item.",
            "type": "string",
            "minLength": 4
        },
        "callNumber": {
            "title": "Call number",
            "description": "Call number of the item.",
            "type": "string",
            "pattern": "^(PA|SR|RR)-\\d{5}$"
        },
        "location": {
            "title": "location",
            "description": "Location of the item.",
            "type": "string",
            "default": "publicAccess",
            "enum": [
                "publicAccess",
                "storeroom",
                "readingRoom"
            ]
        },
        "item_type": {
            "title": "Item type",
            "type": "string",
            "default": "standard_loan",
            "enum": [
                "standard_loan",
                "short_loan",
                "no_loan"
            ]
        },
        "_circulation":{
            "type": "object",
            "properties":{
                "status":{
                    "type": "string",
                    "default": "on_shelf",
                    "enum":[
                        "on_shelf",
                        "on_loan",
                        "missing"
                    ]
                },
                "holdings":{
                    "type": "array",
                    "items":{
                        "type": "object",
                        "properties":{
                            "user":{
                                "type": "string"
                            },
                            "delivery":{
                                "enum":[
                                    "mail",
                                    "pickup"
                                ]
                            },
                            "group_uuid":{
                                "type":[
                                    "string",
                                    "null"
                                ]
                            },
                            "start_date":{
                                "type": "string",
                                "format": "date-time"
                            },
                            "end_date":{
                                "type": "string",
                                "format": "date-time"
                            },
                            "desired_start_date":{
                                "type": "string",
                                "format": "date-time"
                            },
                            "desired_end_date":{
                                "type": "string",
                                "format": "date-time"
                            },
                            "requested_extension_end_date":{
                                "type":[
                                    "string",
                                    "null"
                                ],
                                "format": "date-time"
                            }
                        }
                    }

                }
            }
        }
    }
}
