{
  "$schema": "http://json-schema.org/draft-04/schema#",
  "type": "object",
  "title": "Institution",
  "description": "JSON schema for an institution",
  "additionalProperties": false,
  "required": [ "$schema", "institutionid", "name" ],
  "properties": {
    "$schema": {
      "title": "Schema",
      "description": "Schema to validate institution records against.",
      "type": "string",
      "minLength": 9
    },
    "institutionid": {
      "title": "InstitutionID",
      "description": "ID of the institution.",
      "type": "string"
    },
    "name": {
      "title": "Name",
      "description": "Name of the institution.",
      "type": "string",
      "minLength": 1
    },
    "address": {
      "title": "Address",
      "description": "Address of the institution.",
      "type": "string",
      "minLength": 1
    },
    "libraries": {
      "title": "Libraries",
      "description": "Libraries of the institution.",
      "type": "array",
      "minItems": 1,
      "items": {
        "type": "object",
        "required": ["code", "name"],
        "properties": {
          "code": {
            "title": "Code",
            "description": "Code of the library.",
            "type": "integer"
          },
          "name": {
            "title": "Name",
            "description": "Name of the library",
            "type": "string",
            "minLength": 1,
            "validationMessage": "Needs a valid value."
          },
          "address": {
            "title": "Address",
            "description": "Address of the library.",
            "type": "string",
            "minLength": 1
          },
          "email": {
            "title": "Email",
            "description": "Email of the library.",
            "type": "string",
            "format": "email",
            "pattern": "^.*?@.*.ch$",
            "minLength": 3
          }
        }
      }
    }
  }
}
